<Window x:Class="PotatoTakers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PotatoTakers" Height="500" Width="850"
        Background="#1E1E1E">

    <Grid Margin="10">
        <!-- Spielfeld -->
        <Border Background="#8B4513" CornerRadius="30" Margin="10,70,200,10">
            <Canvas x:Name="MyCanvas" Background="Transparent" Width="570" Height="350"/>
        </Border>

        <!-- Rechtes Menü-Panel -->
        <Border Background="#34495E" CornerRadius="15" Width="180" VerticalAlignment="Stretch" HorizontalAlignment="Right" Margin="0,70,0,10" Padding="10">
            <StackPanel VerticalAlignment="Top" >
                <TextBlock Text="Menü" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Content="Tower 1" Height="40" FontWeight="Bold" Background="#1ABC9C" Foreground="White" BorderThickness="0" Margin="0,5"/>
                <Button Content="Tower 2" Height="40" FontWeight="Bold" Background="#E67E22" Foreground="White" BorderThickness="0" Margin="0,5"/>
                <Button Content="Upgrade" Height="40" FontWeight="Bold" Background="#9B59B6" Foreground="White" BorderThickness="0" Margin="0,5"/>
                <Button Content="Pause" Height="40" FontWeight="Bold" Background="#E74C3C" Foreground="White" BorderThickness="0" Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- Oberes Status-Panel -->
        <Border Background="#2C3E50" CornerRadius="10" Height="60" VerticalAlignment="Top" Margin="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" >
                <TextBlock x:Name="TxtLeben" Text="Leben: 3" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0"/>
                <TextBlock x:Name="TxtScore" Text="Score: 0" Foreground="White" FontWeight="Bold" FontSize="16" Margin="10,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
